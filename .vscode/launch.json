{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run RIHAKA in Debug mode",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-dxdebug.mode=debug",
                "-dxdebug.start_with_request=yes",
                "-S",
                "localhost:8082"
            ],
            "program": "",
            "cwd": "${workspaceRoot}/public",
            "port": 8080,
            "serverReadyAction": {
                "pattern": "Development Server \\(http://localhost:([0-9]+)\\) started",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            }
        }
    ]
}